{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Raki",
  "version": "0.1.0",
  "identifier": "Raki",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build"
  },
  "app": {
    "windows": [
      {
        "title": "Raki",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": ["icons/RakiLogoTransparent.png"],
    "externalBin": ["../../llm_backend/app/dist/main"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg4QUYyQkQ1RDU3NTk1MDgKUldRSWxYWFYxU3V2aUxIbkduUnlXd08xbkF3NE1ta0V0dmc0TFJHK2NGaC9RL3dvQ2VlR0pwREEK",
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}",
        "https://github.com/user/repo/releases/latest/download/latest.json"
      ]
    }
  }
}
